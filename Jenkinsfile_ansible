pipeline {
    agent any
    
    stages {
        stage('CleanWorkspace') {
            steps {
                sh 'ls ${WORKSPACE}'
                sh 'rm -rf ${WORKSPACE}'
            }
        }
        stage('get code') {
            steps {
                git 'https://github.com/hrudayhh/jjcfw.git'
            }
        }
        stage('install roles') {
            agent {
               docker {
                image 'hrudayhh/ansible:v2.9.7'
                args '-u root'
               }
            }
            steps {
                sh '''
                    ansible-galaxy install -r roles/requirements.yml -p .
                    ansible-galaxy list --roles-path=.
                '''
            }
        }
    }
}
